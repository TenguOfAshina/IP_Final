                <input asp-for="app_version" class="form-control" />
                <span asp-validation-for="app_version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="app_description" class="control-label"></label>
                <input asp-for="app_description" class="form-control" />
                <span asp-validation-for="app_description" class="text-danger"></span>
